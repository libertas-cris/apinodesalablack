model User {
  id         String   @id @default(uuid())
  name       String
  email      String   @unique
  password   String
  phone      String
  created_at DateTime @default(now())
  is_Active  Boolean  @default(true)
  event_date DateTime @default(now())
  Task       Task[]

  @@map("users")
}

model Task {
  id          String   @id @default(uuid())
  title       String
  status      Int      @default(0)
  owner       String
  dueDate     DateTime
  description String
  daysControl Int

  user    User   @relation(fields: [user_id], references: [id])
  user_id String

  @@map("tasks")
}
